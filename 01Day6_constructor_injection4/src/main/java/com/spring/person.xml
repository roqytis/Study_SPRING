<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    
    <bean id="pet01" class="com.spring.Cat">
        <constructor-arg name="catName" value="나비"></constructor-arg>
        <constructor-arg name="catAge" value="10"></constructor-arg>
    </bean>
 
     <bean id="xxx" class="com.spring.Person">
          <constructor-arg name="username" value="이순신"></constructor-arg>
          <constructor-arg name="age" value="20"></constructor-arg>
          <constructor-arg name="cat" ref="pet01"></constructor-arg>
     </bean>
</beans>
